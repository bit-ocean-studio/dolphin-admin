{
  "name": "server",
  "private": true,
  "author": "Bruce Song <recall4056@gmail.com> (https://github.com/recallwei/)",
  "scripts": {
    "start": "nest start",
    "dev": "nest start --watch",
    "debug": "nest start --debug --watch",
    "build": "nest build",
    "preview": "node dist/main",
    "type:check": "tsc --pretty --noEmit",
    "eslint:check": "eslint \"**/*.{ts}\" --color",
    "eslint:fix": "pnpm eslint:check -- --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "prisma generate && prisma generate --schema=./src/prisma/mongo.schema.prisma",
    "prisma:generate:watch": "prisma generate --watch && prisma generate --watch --schema=./src/prisma/mongo.schema.prisma",
    "prisma:migrate:dev": "prisma migrate dev --skip-seed",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:mongo": "prisma db push --schema=./src/prisma/mongo.schema.prisma",
    "prisma:seed": "prisma db seed",
    "prisma:reset": "prisma migrate reset",
    "prisma:studio": "prisma studio",
    "prisma:validate": "prisma validate && prisma validate --schema=./src/prisma/mongo.schema.prisma",
    "prisma:format": "prisma format && prisma format --schema=./src/prisma/mongo.schema.prisma"
  },
  "peerDependencies": {
    "axios": "^1.4.0",
    "chalk": "5.3.0",
    "dayjs": "^1.11.9",
    "lodash": "^4.17.21",
    "uuid": "^9.0.0"
  },
  "dependencies": {
    "@nestjs/common": "^10.1.3",
    "@nestjs/core": "^10.1.3",
    "@nestjs/platform-express": "^10.1.3",
    "@ngneat/falso": "^7.0.1",
    "@node-rs/bcrypt": "^1.7.3",
    "@prisma/client": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "~4.18.2",
    "figlet": "^1.6.0",
    "gradient-string": "^2.0.2",
    "jsonwebtoken": "^9.0.1",
    "morgan": "~1.10.0",
    "multer": "1.4.5-lts.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.11",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.1.3",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "4.17.17",
    "@types/figlet": "^1.5.6",
    "@types/gradient-string": "^1.1.2",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/supertest": "^2.0.12",
    "jest": "^29.6.2",
    "prism": "^4.1.2",
    "prisma": "^5.1.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma",
    "seed": "ts-node src/prisma/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "license": "MIT"
}
