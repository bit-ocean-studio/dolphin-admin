{
  "extends": "./tsconfig.base.json",
  "include": [
    "server/src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": "./server",
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2021",
    "composite": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@prisma/pg": [
        "src/prisma/generated/pg"
      ],
      "@prisma/mongo": [
        "src/prisma/generated/mongo"
      ]
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
