{
  "extends": "../tsconfig.base.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.json",
    "vite.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ES2022",
    "moduleResolution": "Node",
    "target": "ESNext",
    "jsx": "preserve",
    "composite": true,
    "declaration": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "node",
      "jsdom",
      "unplugin-icons/types/vue",
      "naive-ui/volar"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  }
}
