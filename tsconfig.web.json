{
  "extends": "./tsconfig.base.json",
  "include": [
    "web/src/**/*.ts",
    "web/src/**/*.tsx",
    "web/src/**/*.vue",
    "web/src/**/*.json",
    "web/vite.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": "./web",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "jsx": "preserve",
    "composite": true,
    "declaration": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "node",
      "jsdom",
      "unplugin-icons/types/vue",
      "naive-ui/volar"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  }
}
