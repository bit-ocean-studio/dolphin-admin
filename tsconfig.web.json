{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "node",
      "jsdom",
      "unplugin-icons/types/vue",
      "naive-ui/volar"
    ],
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "noImplicitThis": true,
    "isolatedModules": true,
    "composite": true,
    "baseUrl": "./web",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "web/src/**/*.ts",
    "web/src/**/*.dts",
    "web/src/**/*.vue",
    "web/src/**/*.json",
    "web/vite.config.*",
    ".eslintrc.js"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
